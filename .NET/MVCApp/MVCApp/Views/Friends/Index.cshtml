@model IEnumerable<MVCApp.Models.FriendViewModel>

<h2>Friends</h2>
<hr />
<br>
@if (Model.Count() != 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    <p>Friend user name</p>
                </th>
                <th>
                    <p>Friend email</p>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(Item => item.Friend.UserName)
                </td>
                <td>
                    @Html.DisplayFor(Item => item.Friend.Email)
                </td>
                <td>
                    <a asp-controller="Friends" asp-action="RemoveFriend" asp-route-id="@item.Friend.Id">Remove</a>
                </td>
                <td>
                    <a asp-controller="Chat" asp-action="Index" asp-route-id="@item.ChatId">Chat</a>
                </td>
                <td>
                    <a asp-controller="Chat" asp-action="DeleteChat" asp-route-id="@item.ChatId">Delete chat</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>Your friends list is empty!</h2>
}