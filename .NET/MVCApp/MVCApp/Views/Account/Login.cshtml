@model MVCApp.Models.LoginViewModel

<h3>Login Page</h3>
<hr />
<form asp-action="Login" asp-controller="Account">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label class="col-md-2" asp-for="Email">Enter Email</label>
            <input class="col-md-2" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label class="col-md-2" asp-for="Password">Enter Password</label>
            <input class="col-md-2" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
